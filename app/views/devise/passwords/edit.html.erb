<div class="page-header section-image">
  <div class="page-header-image" style="background-image:url(https://images.pexels.com/photos/1717079/pexels-photo-1717079.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940)"></div>
    <div class="content">
      <div class="container">
<h2>Changer votre mot de passe</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
  <div class="form-group col-md-6 ml-auto mr-auto">
    <%= f.label :password, "Nouveau mot de passe" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caract√®res minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, class: 'form-control', autocomplete: "new-password" %>
  </div>

  <div class="form-group col-md-6 ml-auto mr-auto">
    <%= f.label :password_confirmation, "Confirmer le mot de passe" %><br />
    <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Valider", class: 'btn btn-primary btn-round' %>
  </div>
<% end %>


<%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

